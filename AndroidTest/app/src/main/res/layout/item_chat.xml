<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              tools:ignore="UseCompoundDrawables" android:layout_marginTop="16dp">

    <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_avatar_placeholder"
            tools:ignore="RtlHardcoded" android:layout_marginLeft="16dp" android:scaleType="center"
    />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="name_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameTextView" android:layout_marginBottom="4dp"
                android:textColor="@color/chat_text" android:textSize="@dimen/chat_text_size"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textColor="@color/chat_text"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse pharetra, sapien at luctus semper, justo dui accumsan lorem, nec pretium dui eros pharetra leo."
                android:layout_height="wrap_content" android:background="@drawable/chat_bubble"
                android:layout_marginRight="21dp" android:textSize="@dimen/chat_name_text_size"/>
    </LinearLayout>

</LinearLayout>